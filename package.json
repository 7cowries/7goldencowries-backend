{
  "name": "7goldencowries-backend",
  "version": "1.0.0",
  "description": "Backend for 7 Golden Cowries",
  "type": "commonjs",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "dev": "NODE_ENV=development node server.js",
    "render-start": "node server.js",
    "migrate:quests": "sqlite3 $DATABASE_URL < scripts/migrate-quests.sql",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "smoke": "node scripts/smoke.mjs",
    "bootstrap": "node scripts/bootstrap-db.js",
    "probe:off": "node scripts/toggleProbe.js",
    "probe:on": "ACTIVE=1 node scripts/toggleProbe.js",
    "migrate:leaderboard": "sqlite3 $DATABASE_URL < scripts/migrate-leaderboard.sql"
  },
  "engines": {
    "node": ">=18 <23"
  },
  "license": "ISC",
  "dependencies": {
    "@tonconnect/ui-react": "^2.3.0",
    "axios": "^1.6.0",
    "body-parser": "^1.20.3",
    "compression": "^1.8.1",
    "connect-sqlite3": "^0.9.16",
    "cookie-parser": "^1.4.7",
    "cookie-session": "^2.1.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "lodash": "^4.17.21",
    "memorystore": "^1.6.7",
    "morgan": "^1.10.1",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "passport": "^0.7.0",
    "passport-twitter": "^1.0.4",
    "passport-twitter-oauth2": "^2.1.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^7.0.0"
  }
}